<Window x:Class="CMCSPrototypeWPF.NewClaimWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Claim" Height="450" Width="600">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="New Claim Form" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <Label Content="Claim Month"/>
            <DatePicker x:Name="ClaimMonthPicker"/>

            <TextBlock Text="Claim Items" FontWeight="Bold" Margin="0,10,0,5"/>
            <DataGrid x:Name="ItemsDataGrid" AutoGenerateColumns="False" Height="150">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}"/>
                    <DataGridTextColumn Header="Hours" Binding="{Binding Hours}"/>
                    <DataGridTextColumn Header="Rate" Binding="{Binding HourlyRate}"/>
                    <DataGridTextColumn Header="Amount" Binding="{Binding Amount}"/>
                </DataGrid.Columns>
            </DataGrid>

            <TextBlock Text="Supporting Documents (visual placeholder)" Margin="0,10,0,5"/>
            <Border BorderBrush="Gray" BorderThickness="2" Height="50" HorizontalAlignment="Stretch">
                <TextBlock Text="Drag &amp; drop files here (prototype)" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Submit" Width="100" Margin="0,0,10,0"/>
                <Button Content="Cancel" Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
