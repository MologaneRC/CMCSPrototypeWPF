<Window x:Class="CMCSPrototypeWPF.CoordinatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Coordinator - Claims" Height="400" Width="700">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Coordinator Dashboard" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- Make sure DataGrid has x:Name -->
            <DataGrid x:Name="ClaimsDataGrid" AutoGenerateColumns="False" Height="300">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Claim ID" Binding="{Binding ClaimId}"/>
                    <DataGridTextColumn Header="Lecturer" Binding="{Binding Lecturer.FullName}"/>
                    <DataGridTextColumn Header="Month" Binding="{Binding ClaimMonth}"/>
                    <DataGridTextColumn Header="Amount" Binding="{Binding TotalAmount}"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
