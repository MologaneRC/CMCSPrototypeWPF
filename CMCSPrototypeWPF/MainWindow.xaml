<Window x:Class="CMCSPrototypeWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lecturer Dashboard" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Welcome, " FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <Button Content="New Claim" Width="120" Height="30" Click="NewClaim_Click" Margin="0,0,0,10"/>

            <TextBlock Text="Your Claims:" FontWeight="Bold" Margin="0,10,0,5"/>
            <DataGrid x:Name="ClaimsDataGrid" AutoGenerateColumns="False" Height="300">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Claim ID" Binding="{Binding ClaimId}"/>
                    <DataGridTextColumn Header="Month" Binding="{Binding ClaimMonth}"/>
                    <DataGridTextColumn Header="Hours" Binding="{Binding TotalHours}"/>
                    <DataGridTextColumn Header="Amount" Binding="{Binding TotalAmount}"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
